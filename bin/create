#!/usr/bin/env python3
# This file is placed in the Public Domain.
#
# pylint: disable=C,I,R


"create environment"


import os
import subprocess
import sys


NAME = "otpcr"
SKIP = ["env", ".git"]


curdir = os.getcwd()


os.environ["PATH"] = ":bin" + os.environ["PATH"]


def cprint(txt):
    print(txt)
    sys.stdout.flush()


def popen(txt):
    "run commands"
    with subprocess.Popen(
                            txt.split(),
                            stdin=sys.stdin,
                            stdout=sys.stdout,
                            stderr=sys.stderr,
                            close_fds=False,
                            text=True
                           ) as proc:
        proc.communicate()
        proc.wait()


def popen2(txt):
    proc = subprocess.Popen(
                            txt,
                            stdin=sys.stdin,
                            stdout=sys.stdout,
                            stderr=sys.stderr,
                            close_fds=False,
                            shell=True,
                            text=True
                           )
    proc.communicate()
    proc.wait()



def main():
    if "-f" in sys.argv:
        cprint("cleaning")
        popen("clean -f")
    if not os.path.exists("dist"):
        popen("python3 setup.py sdist")
    cprint("creating env")
    popen("python3 -mvirtualenv env")
    cprint(f"installing {NAME}")
    popen(f"env/bin/pip3 install {NAME} -f dist --upgrade --force")


main()
